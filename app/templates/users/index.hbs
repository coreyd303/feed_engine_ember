<h3>Users</h3>

<table>
  <thead>
    <th>Name</th><th>Trips Taken</th>
  </thead>

  <tbody>
    <p>{{#link-to 'users.create' class="create-user"}}Create{{/link-to}}</p>

    {{#each}}
      <tr>
        <td>
          {{~#link-to 'users.show' this}}
          {{name}}{{~/link-to}}</td><td>{{trips.length}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
